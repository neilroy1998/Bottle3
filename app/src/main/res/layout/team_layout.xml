<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cat_cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="2dp"
        android:padding="10dp"
        app:cardBackgroundColor="@color/mine_shaft"
        app:cardCornerRadius="32dp"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="5dp">

        <RelativeLayout
            android:id="@+id/home_rel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/member_image"
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/blank"
                app:civ_border_color="#FF000000"
                app:civ_border_width="2dp"
                app:layout_constraintCircleRadius="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_gravity = "center"
                />

            <TextView
                android:id="@+id/member_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:text="Name Abcd"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:layout_below="@+id/member_image"/>

            <TextView
                android:id="@+id/member_position"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_thin"
                android:text="Position"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:layout_below="@+id/member_name"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/member_prcnt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/member_position"
                android:fontFamily="@font/roboto_light"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:paddingTop="8dp"
                android:text="TextView" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>
    >
</RelativeLayout>